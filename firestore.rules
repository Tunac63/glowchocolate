rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /mesai/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (request.resource.data.uid == request.auth.uid ||
         request.auth.token.admin == true);
    }

    match /molalar/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (request.resource.data.uid == request.auth.uid ||
         request.auth.token.admin == true);
    }

    match /mola_uyarilari/{docId} {
      allow read: if request.auth != null && request.auth.token.admin == true;
      allow write: if request.auth != null; // istemci uyarı kaydı oluşturabilir
    }

    match /users/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (request.auth.token.admin == true ||
         resource.data.uid == request.auth.uid);
    }

    // Bildirim kuyruğu: okumayı sadece adminlere aç, yazmayı admin/Functions'a
    match /notification_queue/{docId} {
      allow read: if request.auth != null && request.auth.token.admin == true;
      allow create: if request.auth != null && request.auth.token.admin == true;
      // Cloud Functions sunucudan update eder (service account bypass)
      allow update, delete: if false;
    }

    match /{document=**} {
      allow read: if request.auth != null;
    }
  }
}
